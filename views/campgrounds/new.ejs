<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Enter a New Campground</h1>
        <div style="width:30%; margin: 40px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" name="campground[name]" type ="text" placeholder="Name"> 
                </div>                
                <div class="form-group">
                    <input class="form-control" name="campground[price]" type ="number" placeholder="Price" min="0.01" step="0.01"> 
                </div> 
                <div class="form-group">
                    <input class="form-control" name="campground[image]" type ="text" placeholder="Image URL">
                </div> 
                <div class="form-group">
                    <input class="form-control" name="campground[description]" type ="text" placeholder="Description">
                </div> 
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-primary">Submit</button>
                </div>
            </form>
            <a href="/campgrounds" class="btn btn-sm btn-default btn-block">Go Back</a>
        </div>    
    </div>
</div>

<% include ../partials/footer %>